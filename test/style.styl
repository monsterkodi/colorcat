html
    height 100%

body
    margin      0
    padding     0
    background  #2a2a2a
    color       #eaeaea
    font-size   18px
    line-height 1.3
    font-family Verdana
    height      100%
    
.main_container 
    width      90%
    max-width  900px
    margin     0 auto

.container 
    width       90%
    max-width   600px
    margin      0 auto
    text-align  justify

section 
    display     block
    margin      0 0 20px 0

header 
    background  #222222
    width       100%
    border-bottom 1px solid #111111
    padding     20px 0

li 
    line-height 1.4 

a 
    text-decoration none
    border      none
    outline     none
    color       #63c0f5
    &:hover
        color       #EFAF31
    
    &:focus img
        border 1px solid gray

img
    display       block
    margin-left   auto
    margin-right  auto
    border 1px solid transparent
 
.link 
    font-weight bold

