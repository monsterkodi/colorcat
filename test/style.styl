#main_content 
    width 100%
    -webkit-font-smoothing antialiased

section img 
    max-width 100%
    &:focus
        border  none
        outline none

  
h1, h2, h3, h4, h5, h6 
    margin      0 0 20px
    font-weight bold
    color       #88f

h1 
    font-size   42px
    -webkit-font-smoothing antialiased
    text-shadow 0 1px 1px rgba(0, 0, 0, 0.1),
                0 0 5px rgba(181, 232, 83, 0.1),
                0 0 10px rgba(181, 232, 83, 0.1)
    & a
        color   gray
        &:hover 
        &:focus
            color #63c0f5

h2 
    padding-top 29px
    font-size   16px
    font-weight 300
    color       #666

h3
    padding-top 29px

#main_content h1 
  font-size 30px

#main_content h2 
  font-size 24px

#main_content h3 
  font-size 18px

#main_content h4 
  font-size 14px

#main_content h5 
  font-size 12px
  text-transform uppercase
  margin 0 0 5px 0

#main_content h6 
  font-size     12px
  text-transform uppercase
  color         #999
  margin        0 0 5px 0

dt 
  font-style    italic
  font-weight   bold

ul li 
  list-style    none

ul li:before 
  content       "â–º"
  color         #0a0
  margin-right  8px

blockquote 
  color         #aaa
  padding-left  10px
  border-left   1px dotted #666

pre 
  background    rgba(0, 0, 0, 0.9)
  border        1px solid rgba(255, 255, 255, 0.15)
  padding       10px
  font-size     14px
  color         #b5e853
  border-radius 8px
  -webkit-border-radius 8px
  overflow      auto
  overflow-y    hidden

hr 
  height 0
  border 0
  border-bottom 1px solid #b5e853
  color #b5e853

.icon 
  width 64px
  height 64px

.footer
    margin-top    60px
    margin-bottom 60px

    & .footer-link:hover 
        color #EFAF31

    & .footer-link:focus
        border  none
        outline none

    &:hover path.kitty 
        fill #EFAF31

path.kitty 
    fill #63c0f5
